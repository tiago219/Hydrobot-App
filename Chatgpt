          onHttpError={() => setStatus("error")}
          setSupportMultipleWindows={false}
          // evita barras de rolagem
          scalesPageToFit={false}
          automaticallyAdjustContentInsets={false}
          style={{ backgroundColor:"#000" }}
        />
      </View>
    </View>
  );
}

