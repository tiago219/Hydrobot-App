        <WebView
          key={nonce}                    // for√ßa reconstru√ß√£o
          ref={webref}
          originWhitelist={["*"]}
          source={{ html }}
          javaScriptEnabled
          domStorageEnabled
          allowsInlineMediaPlayback
          mediaPlaybackRequiresUserAction={false}
          onLoadStart={() => setStatus("loading")}
          onMessage={(e) => {
            const msg = String(e.nativeEvent.data || "");
            setStatus(msg === "ok" ? "ok" : "error");
